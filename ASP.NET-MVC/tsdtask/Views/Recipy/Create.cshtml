@model tsdtask.Models.Recipy

@{
    ViewData["Title"] = "Create";
}


<div class="d-flex justify-content-center mt-5 pt-3">
    
<div class="card " style="width: 40%">
  <div class="card-body">
    <h5 class="card-title">Create a new Recipy</h5>
    @* <h6 class="card-subtitle mb-2 text-muted">Create</h6> *@
    <p class="card-text">

        <div class="row m-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NumOfLikes" class="control-label"></label>
                        <input asp-for="NumOfLikes" class="form-control" />
                        <span asp-validation-for="NumOfLikes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Time" class="control-label"></label>
                        <input asp-for="Time" class="form-control" />
                        <span asp-validation-for="Time" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Difficulty" class="control-label"></label>
                        <input asp-for="Difficulty" class="form-control" />
                        <span asp-validation-for="Difficulty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ingredients" class="control-label"></label>
                        <input asp-for="Ingredients" class="form-control" />
                        <span asp-validation-for="Ingredients" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Process" class="control-label"></label>
                        <input asp-for="Process" class="form-control" />
                        <span asp-validation-for="Process" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TipsAndTricks" class="control-label"></label>
                        <input asp-for="TipsAndTricks" class="form-control" />
                        <span asp-validation-for="TipsAndTricks" class="text-danger"></span>
                    </div>
                        <input type="submit" value="   Create   " class="btn btn-dark btn-sm mt-4 " />
                </form>
        </div>

    </p>
    <a asp-action="Index" class="card-link">Back to List</a>
  </div>
</div>
</div>

@* <div>
    <a asp-action="Index" class="btn btn-dark btn-sm">Back to List</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
